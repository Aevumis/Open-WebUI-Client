{
  "expo": {
    "name": "Open-WebUI-Client",
    "slug": "Open-WebUI-Client",
    "version": "1.0.1-rc7",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "openwebuiclient",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aevumis.openwebuiclient",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow Open WebUI Client to access your location for features provided by the web app.",
        "NSMicrophoneUsageDescription": "Allow Open WebUI Client to access your microphone for voice input features in the web app.",
        "NSCameraUsageDescription": "Allow Open WebUI Client to access your camera for video features in the web app."
      },
      "buildNumber": "10001"
    },
    "android": {
      "versionCode": 10002,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.aevumis.openwebuiclient",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "cfd1a41d-74ea-4939-95ba-9e22dd7acbbb"
      }
    }
  }
}
